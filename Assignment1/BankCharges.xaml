<Window x:Class="Assignment1.BankCharges"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment1"
        mc:Ignorable="d"
        Title="BankCharges" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Bank Charges Calculator" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0 0 0 10"/>

            <TextBlock Text="Ending Balance:" Margin="0 5" Width="129"/>
            <TextBox x:Name="txtEndingBalance" Margin="0 0 0 10" Width="186"/>

            <TextBlock Text="Number of Checks Written:" Margin="0 5" Width="146"/>
            <TextBox x:Name="txtNumberOfChecks" Margin="0 0 0 10" Width="182"/>
            <Button Content="Calculate" Click="CalculateButton_Click" FontSize="16" Height="42" Width="140"/>
        </StackPanel>
        <Button Content="Return to main" HorizontalAlignment="Left" Margin="612,46,0,0" VerticalAlignment="Top" Height="26" Width="106" Click="Button_Click"/>

    </Grid>
</Window>
