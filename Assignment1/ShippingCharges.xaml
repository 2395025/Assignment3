<Window x:Class="Assignment1.ShippingCharges"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment1"
        mc:Ignorable="d"
        Title="ShippingCharges" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Fast Freight Shipping Calculator" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0 0 0 10"/>

            <TextBlock Text="Weight of Package (KG):" Margin="0 5" Width="188"/>
            <TextBox x:Name="txtWeight" Margin="0 0 0 10" Width="187"/>

            <TextBlock Text="Distance Shipped (Miles):" Margin="0 5" Width="176"/>
            <TextBox x:Name="txtDistance" Margin="0 0 0 10" Width="188"/>

            <Button Content="Calculate Shipping Charges" Click="CalculateButton_Click" HorizontalAlignment="Center" Height="36" Width="237" FontSize="16"/>
        </StackPanel>
        <Button Content="Return to main" HorizontalAlignment="Left" Margin="678,31,0,0" VerticalAlignment="Top" Height="26" Width="102" Click="Button_Click"/>

    </Grid>
</Window>
